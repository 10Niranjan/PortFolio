---
import ContactForm from '../react/ContactForm';
---

<section id="contact" class="py-12 border-t border-[#ffffff10] text-[var(--white)]">
  <div class="max-w-5xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
      <!-- Left Column — Info -->
      <div>
        <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">Let's talk</h2>
        <h3 class="text-4xl md:text-5xl font-medium mb-6">Contact</h3>
        <p class="text-[var(--white-icon)] leading-relaxed mb-10 max-w-md">
          Have a question or a project in mind? Feel free to reach out. I'm always open to discussing new opportunities and ideas.
        </p>

        <!-- Contact Info Cards -->
        <div class="space-y-4">
          <a href="mailto:pvt.niranjan10@gmail.com" class="glass-card p-5 flex items-center gap-4 group block">
            <div class="w-10 h-10 rounded-xl bg-[var(--white-icon-tr)] flex items-center justify-center shrink-0 group-hover:bg-[#a476ff20] transition-all">
              <svg class="w-5 h-5 text-[var(--sec)]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"/></svg>
            </div>
            <div>
              <p class="text-xs text-[var(--white-icon)] font-medium tracking-wider">EMAIL</p>
              <p class="text-sm text-[var(--white)] group-hover:text-[var(--sec)] transition-colors">pvt.niranjan10@gmail.com</p>
            </div>
          </a>

          <a href="https://github.com/10Niranjan" target="_blank" rel="noopener" class="glass-card p-5 flex items-center gap-4 group block">
            <div class="w-10 h-10 rounded-xl bg-[var(--white-icon-tr)] flex items-center justify-center shrink-0 group-hover:bg-[#a476ff20] transition-all">
              <svg class="w-5 h-5 text-[var(--sec)]" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
            </div>
            <div>
              <p class="text-xs text-[var(--white-icon)] font-medium tracking-wider">GITHUB</p>
              <p class="text-sm text-[var(--white)] group-hover:text-[var(--sec)] transition-colors">github.com/10Niranjan</p>
            </div>
          </a>

          <div class="glass-card p-5 flex items-center gap-4">
            <div class="w-10 h-10 rounded-xl bg-[var(--white-icon-tr)] flex items-center justify-center shrink-0">
              <svg class="w-5 h-5 text-[var(--sec)]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"/></svg>
            </div>
            <div>
              <p class="text-xs text-[var(--white-icon)] font-medium tracking-wider">LOCATION</p>
              <p class="text-sm text-[var(--white)]">Pune, Maharashtra, India</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column — Form -->
      <div class="glass-card p-8">
        <ContactForm client:visible />
      </div>
    </div>
  </div>
</section>
