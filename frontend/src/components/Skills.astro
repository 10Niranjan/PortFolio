---
const skills = [
  // Programming Languages
  { name: 'Java', category: 'Languages' },
  { name: 'JavaScript', category: 'Languages' },
  { name: 'TypeScript', category: 'Languages' },
  { name: 'C#', category: 'Languages' },
  { name: 'Dart', category: 'Languages' },
  { name: 'HTML', category: 'Languages' },
  { name: 'CSS', category: 'Languages' },
  { name: 'Python', category: 'Languages' },
  
  // Frameworks
  { name: 'Spring Boot', category: 'Frameworks' },
  { name: 'Flutter', category: 'Frameworks' },
  { name: 'React', category: 'Frameworks' },
  { name: 'Astro', category: 'Frameworks' },
  { name: '.NET', category: 'Frameworks' },
  { name: 'ASP.NET MVC', category: 'Frameworks' },
  { name: 'Flask', category: 'Frameworks' },
  
  // Tools & DB
  { name: 'MySQL', category: 'Tools' },
  { name: 'PostgreSQL', category: 'Tools' },
  { name: 'Git & GitHub', category: 'Tools' },
  { name: 'IntelliJ IDEA', category: 'Tools' },
  { name: 'VS Code', category: 'Tools' },
  { name: 'Android Studio', category: 'Tools' },
  { name: 'Gradle', category: 'Tools' },
];

const categories = [...new Set(skills.map(s => s.category))];
---

<section class="py-12 border-t border-[#ffffff10] text-[var(--white)]">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">Technical Skills</h2>
    <h3 class="text-4xl md:text-5xl font-medium mb-8">My Stack</h3>

    <div class="space-y-8">
      {categories.map((cat) => (
        <div>
          <h4 class="text-sm font-medium text-[var(--white-icon)] uppercase tracking-wider mb-4 flex items-center gap-3">
            <span class="w-8 h-px bg-[#ffffff15]"></span>
            {cat}
          </h4>
          <div class="flex flex-wrap gap-3">
            {skills.filter(s => s.category === cat).map((skill, i) => (
              <span 
                class="px-4 py-2 rounded-xl bg-[#1414149c] border border-[var(--white-icon-tr)] text-sm text-[var(--white)]
                       hover:border-[var(--sec)] hover:text-[var(--sec)] hover:bg-[var(--white-icon-tr)]
                       transition-all duration-300 cursor-default hover:scale-105"
                style={`animation-delay: ${i * 0.05}s;`}
              >
                {skill.name}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
