---

<section class="py-24 relative">
  <div class="max-w-6xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <p class="section-title">Services</p>
      <h2 class="text-3xl md:text-4xl font-bold text-zinc-100">What I do?</h2>
    </div>

    <!-- Service Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {services.map((service, index) => (
        <div class="glass-card-hover p-8 group" style={`animation-delay: ${index * 0.1}s;`}>
          <!-- Icon -->
          <div class="text-4xl mb-6">{service.icon}</div>
          
          <!-- Title -->
          <h3 class="text-xl font-semibold text-zinc-100 mb-4 group-hover:text-primary transition-colors">
            {service.title}
          </h3>
          
          <!-- Items -->
          <ul class="space-y-3">
            {service.items.map((item) => (
              <li class="flex items-start gap-3 text-sm text-zinc-400">
                <span class="w-1 h-1 rounded-full bg-primary/60 mt-2 shrink-0"></span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>
