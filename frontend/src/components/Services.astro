---

<section class="py-12 border-t border-[#ffffff10] text-[var(--white)]">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">Services</h2>
    <h3 class="text-4xl md:text-5xl font-medium mb-8">What I do?</h3>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {services.map((service) => (
        <div class="glass-card p-8 group">
          <div class="text-[var(--white-icon)] mb-5 group-hover:text-[var(--sec)] transition-colors duration-300">
            <Fragment set:html={service.icon} />
          </div>
          
          <h4 class="text-xl font-semibold mb-4 group-hover:text-[var(--sec)] transition-colors duration-300">
            {service.title}
          </h4>
          
          <ul class="space-y-3">
            {service.items.map((item) => (
              <li class="flex items-start gap-3 text-sm text-[var(--white-icon)]">
                <span class="w-1.5 h-1.5 rounded-full bg-[var(--sec)] mt-1.5 shrink-0 opacity-60"></span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>
