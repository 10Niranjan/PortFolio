const projects = [
  {
    title: 'IndShield',
    description: 'Industrial Safety Web Application using YOLOv8, MediaPipe, and OpenCV for real-time detection. Features gesture-based alerts, safety gear detection, and restricted zone monitoring.',
    tags: ['Flask', 'Python', 'YOLOv8', 'OpenCV', 'TensorFlow'],
    status: 'Deployed',
    url: '#',
    gradient: 'from-red-500/20 via-orange-500/10 to-transparent',
  },
  {
    title: 'Fanclub Cricket App',
    description: 'A platform for cricket enthusiasts with live scores, match schedules, player statistics, fan polls, chat rooms, and event notifications. Built with Flutter for cross-platform experience.',
    tags: ['Flutter', 'Dart', 'Firebase', 'REST API'],
    status: 'Deployed',
    url: '#',
    gradient: 'from-emerald-500/20 via-green-500/10 to-transparent',
  },
  {
    title: 'To-Do List Application',
    description: 'Full-featured task management app with create, update, view, and delete operations. Each task includes title, description, due date, and status tracking. Built with Java Swing/JavaFX.',
    tags: ['Java', 'JavaFX', 'Swing', 'MySQL'],
    status: 'Deployed',
    url: '#',
    gradient: 'from-blue-500/20 via-indigo-500/10 to-transparent',
  },
  {
    title: 'Portfolio Website',
    description: 'This very website! A full-stack portfolio built with Astro, React, TypeScript & TailwindCSS on the frontend, and Java Spring Boot with PostgreSQL on the backend.',
    tags: ['Astro', 'React', 'Spring Boot', 'PostgreSQL'],
    status: 'Live',
    url: '#',
    gradient: 'from-violet-500/20 via-purple-500/10 to-transparent',
  },
];
---

<section id="projects" class="py-24 relative">
  <div class="max-w-6xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <p class="section-title">My work</p>
      <h2 class="text-3xl md:text-4xl font-bold text-zinc-100">Projects</h2>
    </div>

    <!-- Project Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {projects.map((project, index) => (
        <a href={project.url} class="glass-card-hover p-8 relative overflow-hidden group block" target={project.url !== '#' ? '_blank' : undefined}>
          <!-- Gradient overlay -->
          <div class={`absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l ${project.gradient} opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none`}></div>

          <div class="relative z-10">
            <!-- Header Row -->
            <div class="flex items-start justify-between mb-4">
              <h3 class="text-xl font-semibold text-zinc-100 group-hover:text-primary transition-colors">
                {project.title}
              </h3>
              <span class="flex items-center gap-1.5 text-xs font-mono px-3 py-1 rounded-full bg-primary/10 border border-primary/20 text-primary shrink-0 ml-4">
                <span class="w-1.5 h-1.5 rounded-full bg-primary animate-pulse"></span>
                {project.status}
              </span>
            </div>

            <!-- Description -->
            <p class="text-sm text-zinc-400 leading-relaxed mb-6">
              {project.description}
            </p>

            <!-- Tags -->
            <div class="flex flex-wrap gap-2">
              {project.tags.map((tag) => (
                <span class="text-xs px-2.5 py-1 rounded-lg bg-surface border border-border/50 text-zinc-500">
                  {tag}
                </span>
              ))}
            </div>
          </div>
        </a>
      ))}
    </div>

    <!-- GitHub Link -->
    <div class="text-center mt-12">
      <a href="https://github.com/10Niranjan?tab=repositories" target="_blank" rel="noopener" 
         class="inline-flex items-center gap-2 text-sm text-zinc-400 hover:text-primary transition-colors duration-300 group">
        <span>More projects on</span>
        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
        <span class="font-medium text-primary">GitHub</span>
      </a>
    </div>
  </div>
</section>
