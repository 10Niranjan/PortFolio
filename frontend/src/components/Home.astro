<section id="home" class="min-h-screen flex items-center justify-center relative pt-16">
  <!-- Decorative Elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-primary/5 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-violet-500/5 rounded-full blur-3xl animate-float" style="animation-delay: -3s;"></div>
  </div>

  <div class="max-w-6xl mx-auto px-6 text-center relative z-10">
    <!-- Greeting -->
    <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-surface/60 border border-border/50 backdrop-blur-sm mb-8 animate-fade-in">
      <span class="glow-dot"></span>
      <span class="text-sm text-zinc-400">Hi, I'm <span class="text-primary font-medium">Niranjan Patil</span></span>
    </div>

    <!-- Title -->
    <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-bold tracking-tight mb-6 animate-slide-up">
      <span class="gradient-text">Software</span>
      <br />
      <span class="text-zinc-100">Developer</span>
    </h1>

    <!-- Subtitle -->
    <p class="text-lg md:text-xl text-zinc-400 max-w-2xl mx-auto mb-10 animate-slide-up leading-relaxed" style="animation-delay: 0.1s;">
      Transforming ideas into interactive and seamless digital experiences with cutting-edge full-stack development.
    </p>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center animate-slide-up" style="animation-delay: 0.2s;">
      <a href="#projects" class="btn-primary">
        <span class="flex items-center gap-2 justify-center">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"/></svg>
          View Projects
        </span>
      </a>
      <a href="#contact" class="px-6 py-3 rounded-xl border border-border/50 text-zinc-300 font-medium transition-all duration-300 hover:border-zinc-500 hover:text-white hover:bg-surface-light/50">
        Get in Touch
      </a>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 text-zinc-500 animate-fade-in" style="animation-delay: 1s;">
      <span class="text-xs font-mono tracking-wider">SCROLL</span>
      <div class="w-px h-8 bg-gradient-to-b from-zinc-500 to-transparent"></div>
    </div>
  </div>
</section>
